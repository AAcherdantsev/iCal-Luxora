<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:icons="clr-namespace:iCal.Luxora.Application.UI.Components.Icons"
             x:Class="iCal.Luxora.Application.UI.Common.Devices.SavedDeviceCard">

    <Border StrokeThickness="1" Padding="15">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.3"
                    Offset="0,4"
                    Radius="10" />
        </Border.Shadow>

        <VerticalStackLayout HorizontalOptions="Fill"
                             VerticalOptions="Fill">

            <Grid ColumnDefinitions="*,*">

                <VerticalStackLayout Grid.Column="0" Spacing="10">
                    <Label Text="Device name" />
                    <BoxView StyleClass="Divider" Margin="0, 0, 15, 0" />

                    <HorizontalStackLayout Spacing="10">
                        <Image HeightRequest="80" WidthRequest="80" HorizontalOptions="Start"
                               Source="lamp.png">
                            <Image.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource SecondaryDark}" />
                            </Image.Behaviors>
                        </Image>

                        <Label VerticalTextAlignment="Center" FontAttributes="Bold" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Secondary}" Text="32 x 32" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="10">
                    <Label Text="Features" HorizontalTextAlignment="End" />
                    <BoxView StyleClass="Divider" Margin="15, 0, 0, 0" />

                    <HorizontalStackLayout HorizontalOptions="End" Spacing="8">
                        <icons:Icon Source="bluetooth.png" WidthRequest="30" />
                        <icons:Icon Source="wifi.png" WidthRequest="30" />
                        <icons:Icon Source="music.png" WidthRequest="30" />
                        <icons:Icon Source="games.png" WidthRequest="30" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="End" Spacing="8">
                        <icons:Icon Source="sd_card.png" WidthRequest="30" />
                        <icons:Icon Source="microphone.png" WidthRequest="30" />
                        <icons:Icon Source="draw_brush_reflection.png" WidthRequest="30" />
                        <icons:Icon Source="battery_full.png" WidthRequest="30" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>

            <BoxView StyleClass="Divider" Margin="0, 8" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">

                <Button StyleClass="OutlinedButton"
                        Grid.Column="0"
                        Text="Delete" />

                <Button StyleClass="FilledButton"
                        Grid.Column="1"
                        Text="Connect"
                        HorizontalOptions="Fill" />
            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>