<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:icons="clr-namespace:iCal.Luxora.Application.UI.Components.Icons"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="iCal.Luxora.Application.UI.Common.Devices.FoundDevice">

    <Border StrokeThickness="1" Padding="15, 10">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.3"
                    Offset="0,4"
                    Radius="10" />
        </Border.Shadow>

        <Grid ColumnDefinitions="40,*,*" RowDefinitions="40" ColumnSpacing="15">
            <icons:Icon Source="wifi.png" VerticalOptions="Fill" HorizontalOptions="Fill" />
            <Label Grid.Column="1" Text="Device name" VerticalTextAlignment="Center" />

            <material:ButtonView StrokeThickness="1" Padding="15, 0" Margin="0" Grid.Column="2" HorizontalOptions="End">
                <material:ButtonView.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </material:ButtonView.StrokeShape>

                <material:ButtonView.Stroke>
                    <SolidColorBrush Color="{StaticResource PrimaryDark}" />
                </material:ButtonView.Stroke>

                <HorizontalStackLayout Margin="0, 8" Spacing="5">

                    <Image Source="link" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource White}" />
                        </Image.Behaviors>
                    </Image>

                    <Label Text="Connect" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                </HorizontalStackLayout>


            </material:ButtonView>
        </Grid>
    </Border>
</ContentView>