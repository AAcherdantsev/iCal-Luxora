<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:behaviors="clr-namespace:iCal.Luxora.Application.UI.Common.Behaviors"
             x:Class="iCal.Luxora.Application.UI.Common.Devices.EffectParemeterView">
    
    <ContentView.Resources>
        <ResourceDictionary>
            <toolkit:DoubleToIntConverter x:Key="DoubleToIntConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Border StrokeThickness="1" Padding="15, 10">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.3"
                    Offset="0,4"
                    Radius="10" />
        </Border.Shadow>
                    
        <Grid ColumnDefinitions="30, *, 30" ColumnSpacing="5">
            
            <Image Source="brightness" 
                   ToolTipProperties.Text="Brightness"
                   Grid.Column="0">
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                </Image.Behaviors>
            </Image>
            
            <Slider Grid.Column="1" x:Name="Slider" 
                    Minimum="0" Maximum="100" Value="90" HorizontalOptions="FillAndExpand" >
                <Slider.Behaviors>
                    <behaviors:IntSliderBehavior />
                </Slider.Behaviors>
            </Slider>
                        
            <Label Grid.Column="2" 
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Text="{Binding Source={x:Reference Slider}, Path=Value, Converter={StaticResource DoubleToIntConverter}}" />
        </Grid>
    </Border>
</ContentView>