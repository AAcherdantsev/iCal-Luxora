<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:devices="clr-namespace:iCal.Luxora.Application.UI.Common.Devices"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:iCal.Luxora.Application.UI.Common.Converters"
             x:Name="This"
             x:Class="iCal.Luxora.Application.UI.Views.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Fill"
                             Padding="0, 10,0,0"
                             Spacing="25">

            <devices:SavedDeviceCard />
            <devices:FoundDevice />

            <VerticalStackLayout Spacing="10"
                                 BindableLayout.ItemsSource="{Binding Path=ParameterSettings, Source={x:Reference This}}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <devices:EffectParameterView BindingContext="{Binding .}" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <BoxView StyleClass="Divider" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>